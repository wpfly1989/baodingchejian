<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <android.support.v7.widget.Toolbar
       android:id="@+id/mainActivityToolbar"
       android:layout_width="match_parent"
       android:layout_height="?attr/actionBarSize"
       android:background="?attr/colorPrimary"
       android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
       app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <FrameLayout
        android:id="@+id/contentFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="55dp">
       <RadioGroup
           android:id="@+id/mainActivityRadioGroup"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:background="#FFFFFF"
           android:orientation="horizontal">
           <RadioButton
               android:id="@+id/chejianradiobutton"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:button="@null"
               android:padding="3dp"
               android:drawableTop="@mipmap/chejiantubiao"
               android:textSize="13dp"
               android:textColor="#000000"
               android:text="车间"/>
           <RadioButton
               android:id="@+id/banzuradiobutton"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:button="@null"
               android:padding="3dp"
               android:drawableTop="@mipmap/banzutubiao"
               android:textSize="13dp"
               android:textColor="#000000"
               android:text="班组"/>
           <RadioButton
               android:id="@+id/tongzhiradiobutton"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:button="@null"
               android:padding="3dp"
               android:drawableTop="@mipmap/tongzhitubiao"
               android:textSize="13dp"
               android:textColor="#000000"
               android:text="通知"/>
           <RadioButton
               android:id="@+id/fankuiradiobutton"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:button="@null"
               android:padding="3dp"
               android:drawableTop="@mipmap/shuomingtubiao"
               android:textSize="13dp"
               android:textColor="#000000"
               android:text="说明"/>

       </RadioGroup>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="55dp"
           android:orientation="horizontal">
           <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:visibility="invisible"
               android:layout_weight="1"/>
           <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:visibility="invisible"
               android:layout_weight="1"/>
           <Button
               android:id="@+id/toumingbutton"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:visibility="invisible"
               android:layout_weight="1"/>
           <Button
               android:id="@+id/shuomingbutton"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:visibility="invisible"
               android:layout_weight="1"/>
       </LinearLayout>


   </RelativeLayout>


</LinearLayout>  