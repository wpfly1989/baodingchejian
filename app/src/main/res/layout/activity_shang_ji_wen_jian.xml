<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/shangjiwenjianedittext"
        android:background="@drawable/shangjiwenjianedit"
        android:drawableLeft="@drawable/ic_action_name"
        android:focusable="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="5dp"
        android:textColor="#008A00"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="点击搜索文件..." />



    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/shangjiwenjianmagic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F0FFFF">

    </net.lucode.hackware.magicindicator.MagicIndicator>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8A2BE2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="#dcdcdc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <ProgressBar
            android:id="@+id/shangjiwenjianprogressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/shangjiwenjianlistview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="3dp"
            android:visibility="gone"></ListView>
        <ListView
            android:id="@+id/shangjiwenjianlistview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="3dp"
            android:visibility="gone"></ListView>
        <ListView
            android:id="@+id/shangjiwenjianlistview3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="3dp"
            android:visibility="gone"></ListView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#dcdcdc"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>